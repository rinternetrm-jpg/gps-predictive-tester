<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0f0f14">

    <!-- Scrollbarer Bereich -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#16161d">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS Predictive Tester"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Präzises Location Tracking mit ±5m Genauigkeit"
                    android:textSize="11sp"
                    android:textColor="#9898a8"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Target Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#1c1c26">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZIEL KOORDINATEN"
                    android:textSize="10sp"
                    android:textColor="#5c5c6c"
                    android:letterSpacing="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/etLat"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_background"
                        android:hint="Latitude"
                        android:textColor="#ffffff"
                        android:textColorHint="#5c5c6c"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp"
                        android:fontFamily="monospace" />

                    <EditText
                        android:id="@+id/etLng"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/input_background"
                        android:hint="Longitude"
                        android:textColor="#ffffff"
                        android:textColorHint="#5c5c6c"
                        android:inputType="numberDecimal|numberSigned"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_background"
                        android:hint="Oder Adresse eingeben..."
                        android:textColor="#ffffff"
                        android:textColorHint="#5c5c6c"
                        android:inputType="text"
                        android:paddingHorizontal="10dp"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="6dp"
                        android:text="S"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="@drawable/button_primary" />
                </LinearLayout>

                <!-- Snap to Road Info (kompakt) -->
                <LinearLayout
                    android:id="@+id/snapInfoSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/card_background"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvOriginalCoords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="—"
                        android:textSize="9sp"
                        android:textColor="#9898a8"
                        android:fontFamily="monospace" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="->"
                        android:textSize="12sp"
                        android:textColor="#06b6d4"
                        android:paddingHorizontal="6dp" />

                    <TextView
                        android:id="@+id/tvSnappedCoords"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="—"
                        android:textSize="9sp"
                        android:textColor="#22c55e"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/tvRoadDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#f97316"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/tvRoadName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:textColor="#3b82f6"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Trigger Radius -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RADIUS"
                        android:textSize="10sp"
                        android:textColor="#5c5c6c" />

                    <SeekBar
                        android:id="@+id/seekRadius"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:min="5"
                        android:max="100"
                        android:progress="10"
                        android:progressTint="#3b82f6"
                        android:thumbTint="#3b82f6" />

                    <TextView
                        android:id="@+id/tvRadius"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="10m"
                        android:textColor="#3b82f6"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- Live Stats (kompakter) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DISTANZ"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#3b82f6"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <!-- Accuracy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACCURACY"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#22c55e"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEED"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#f97316"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mode, Next Check, Count (eine Zeile) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODUS"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#22c55e" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEXT CHECK"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvNextCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#06b6d4"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHECKS"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvCheckCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#a855f7"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>

            <!-- Map + ETA (kleiner) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingTop="6dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/card_background"
                    android:clipChildren="true"
                    android:clipToPadding="true">

                    <org.osmdroid.views.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvMapLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_margin="4dp"
                        android:text="MAP"
                        android:textSize="8sp"
                        android:textColor="#5c5c6c"
                        android:background="#CC1c1c26"
                        android:padding="2dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETA"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvETA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#eab308"
                        android:fontFamily="monospace" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:layout_marginVertical="4dp"
                        android:background="#2d2d3a" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START"
                        android:textSize="8sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvStartDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="12sp"
                        android:textColor="#9898a8"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>

            <!-- WLAN Hybrid (kompakt) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingTop="6dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WLAN"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvWifiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#22c55e" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SSID"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvWifiSSID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME"
                        android:textSize="9sp"
                        android:textColor="#5c5c6c" />

                    <TextView
                        android:id="@+id/tvHomeDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#3b82f6"
                        android:fontFamily="monospace" />
                </LinearLayout>

                <Switch
                    android:id="@+id/switchWifiHybrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:checked="true"
                    android:thumbTint="#22c55e"
                    android:trackTint="#2d2d3a" />
            </LinearLayout>

            <!-- Log -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENT LOG"
                android:textSize="10sp"
                android:textColor="#5c5c6c"
                android:letterSpacing="0.1"
                android:paddingHorizontal="8dp"
                android:paddingTop="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLog"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_background"
                android:padding="6dp"
                android:clipToPadding="false" />

        </LinearLayout>
    </ScrollView>

    <!-- Buttons (fixiert unten) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#16161d">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="START TRACKING"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_success" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="STOP"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_danger"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>
