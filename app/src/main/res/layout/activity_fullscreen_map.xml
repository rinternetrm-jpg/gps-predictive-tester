<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0f0f14">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#16161d"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="â† ZurÃ¼ck"
            android:textColor="#9898a8"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRIGGER-LINIEN"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/5"
            android:textColor="#9898a8" />
    </LinearLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:text="+ Linie"
        android:textColor="#22c55e"
        android:background="@android:color/transparent" />

    <!-- Map -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#16161d">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSelected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keine Linie"
                android:textColor="#9898a8" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="ðŸ—‘ï¸"
                android:textColor="#ef4444"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Rotation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="ðŸ”„"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seekRotation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="360"
                android:progress="180" />

            <TextView
                android:id="@+id/tvRotation"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0Â°"
                android:textColor="#a855f7"
                android:gravity="end" />
        </LinearLayout>

        <!-- Length -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="â†”ï¸"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seekLength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:min="10"
                android:max="100"
                android:progress="30" />

            <TextView
                android:id="@+id/tvLength"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="30m"
                android:textColor="#22c55e"
                android:gravity="end" />
        </LinearLayout>

        <!-- Confirm -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="âœ“ Speichern"
            android:textColor="#fff"
            android:backgroundTint="#22c55e" />
    </LinearLayout>
</LinearLayout>
